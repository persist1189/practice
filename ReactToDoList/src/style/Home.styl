*{
    padding: 0;
    margin: 0;
    list-style: none;
}
.paddingTop {
    padding-top: 35px;
}
.subSection {
    width: 90%;
    margin: 0 auto;
}
.youTube {
    display: flex;
    justify-content: center;    
    background-color: rgb(216, 255, 169)
    iframe {
        width: 75vw;
        height: 70vh;
    }
}
.easySection {
    padding: 30px 0px;    
}
.easyContainer {
    display: flex;   
    justify-content: center; 
}
.easyItem {
    padding: 20px;    
    text-align: center;
}
.easyFont {
    font-size: 1.75rem;
    height: 250px;
    display: flex;
    align-items: center;
}
.easyText {
    margin-top: 10px;
}
.hardSection {
    text-align: center;
    background-color: #f8f9fa;
    h2{
        padding: 50px 0px;
    }
}
.hardContainer {
    display: flex;   
    justify-content: center;   
}
.hardItem {
    padding: 20px;
    text-align: center;    
}
.hardText {
    margin-top: 10px;    
}
.learningContainer {
    display: flex;
}
.learningItem{
    font-size: 18px;
    padding: 20px;
    margin-left: 10px;    
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 50%;
    img {
        width: 85%;
    }
}
.howToUseSection {
    background-color: #f8f9fa;
    display: flex;
}
.howToUseItem {
    width: 50%;    
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: stretch;
    img {
        width: 85%;
    }
}
.howToUsePStyle {
    p {
        display: flex; 
        justify-content: flex-end;
        font-size: 18px;
    }
}
.howToUsePStyle2 {
    p {
        margin-bottom: 0px;
        line-height: 25px;
    }
}
.CourseSyllabusSection {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px;
}
.imageCarouselSection{
    display: flex;
    justify-content: center;
    padding: 50px;
}

.imageCarouselView {
    width: 1051px;
    overflow: hidden;
    position: relative;
}
.imageCarouseRightArrow {
    position: relative;
}
.imageCarouseRightArrow::before {
    content: ">";    
    font-size: 50px;
    position: absolute;
    right: -70rem;
    top: 35%;
}
.imageCarouseLeftArrow {
    position: relative;
}
.imageCarouseLeftArrow::before {
    content: "<";    
    font-size: 50px;
    position: absolute;
    left: -70rem;
    top: 35%;
}

.imageCarouselSource {
    display: flex;    
    transform: translateX(0px);
}
.lecturerTitleSection{
    text-align: center;
}
.lecturerSection {
    text-align: center;    
}
.lecturerDescription h2::before{
    content: '一';
}
.lecturerDescription h2::after{
    content: '一';
}
.lecturerProfile {
    display: flex;   
    justify-content: center; 
}
.lecturerItem {
    padding: 20px;    
    position: relative;
        p {
            padding-top: 5px;
        }
}
.lecturerItem:hover .lecturerSpeak{
    opacity: 1;
}
.lecturerSpeakSection {
    position: absolute;    
    top: -15%;
    left: 55%;
    z-index: 10;
}
.lecturerSpeak {
    opacity: 0;
    position: relative;
    p{
        position: absolute;
        top: 26%;
        left: 15%;
        color: white;
    }
}
.lecturerSpeakRightSection{
    position: absolute;    
    top: -15%;
}
.GameTeamMember {
    display: flex;    
    justify-content: center;
}
